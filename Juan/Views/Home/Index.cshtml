@model HomeViewModel
@{ ViewData["Title"] = "Index"; }

<!-- main wrapper start -->
<main>
    <!-- hero slider section start -->
    <section class="hero-slider">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="hero-slider-active slick-arrow-style slick-arrow-style_hero slick-dot-style">
                        <!-- single slider item start -->
                        @foreach (var slide in Model.Slides)
                        {
            <div class="hero-single-slide">
                <div class="hero-slider-item bg-img" data-bg="assets/img/slider/@slide.Url">
                    <div class="hero-slider-content slide-1">
                        <h5 class="slide-subtitle">@slide.Subtitle</h5>
                        <h2 class="slide-title">@slide.Title</h2>
                        <p class="slide-desc">@slide.Description</p>
                        <a href="shop.html" class="btn btn-hero">@slide.ShopBtnText</a>
                    </div>
                </div>
            </div>}
                        <!-- single slider item end -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- hero slider section end -->
    <!-- service features start -->
    <section class="service-policy-area">
        <div class="container">
            <div class="row">
                <!-- single policy item start -->
                @foreach (var feature in Model.Features)
                {
                    <div class="col-lg-4">
                        <div class="service-policy-item mt-30 bg-1">
                            <div class="policy-icon">
                                <img src="assets/img/icon/@feature.Icon" alt="policy icon" />
                            </div>
                            <div class="policy-content">
                                <h5 class="policy-title">@feature.Title</h5>
                                <p class="policy-desc">@feature.Summary</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- service features end -->
    <!-- our product area start -->
    <section class="our-product section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">@Model.ProductSummary.Title</h2>
                        <p class="sub-title">@Model.ProductSummary.Summary</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="product-carousel-4 mbn-50 slick-row-15 slick-arrow-style">
                        @foreach (var product in Model.Products)
                        {
                            <div class="product-item mb-50">
                                <div class="product-thumb">
                                    <a href="product-details.html">
                                        <img src="assets/img/product/@product.Url" alt="" />
                                    </a>
                                </div>
                                <div class="product-content">
                                    <h5 class="product-name">
                                        <a href="product-details.html">@product.Name</a>
                                    </h5>
                                    <div class="price-box">
                                        <span class="price-regular">$@product.Price</span>
                                        <span class="price-old"><del>$70.00</del></span>
                                    </div>
                                    <div class="product-action-link">
                                        <a href="#" data-toggle="tooltip" title="Wishlist">
                                            <i class="ion-android-favorite-outline"></i>
                                        </a>
                                        <a href="#" data-toggle="tooltip" title="Add To Cart">
                                            <i class="ion-bag"></i>
                                        </a>
                                        <a href="#" data-toggle="modal" data-target="#quick_view">
                                            <span data-toggle="tooltip" title="Quick View">
                                                <i class="ion-ios-eye-outline"></i>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- our product area end -->
    <!-- banner statistic area start -->
    <div class="banner-statistics">
        <div class="container">
            <div class="row no-gutters mtn-30">
                @foreach (var banner in Model.Banners)
                {
                    <div class="col-md-6">
                        <div class="img-container mt-30">
                            <a href="product-details.html">
                                <img src="assets/img/banner/@banner.Url"
                                     alt="banner-image" />
                            </a>
                            <div class="banner-text">
                                <h5 class="banner-subtitle">@banner.Subtitle</h5>
                                <h3 class="banner-title">@Html.Raw(@banner.Title)</h3>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- banner statistic area end -->
    <!-- new products area start -->
    <section class="top-seller-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">@Model.NewProductSummary.Title</h2>
                        <p class="sub-title">@Model.NewProductSummary.Subtitle</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-4 col-lg-5 col-md-5">
                    <div class="product-banner">
                        <a href="#">
                            <img src="assets/img/banner/banner-3.jpg"
                                 alt="product banner" />
                        </a>
                    </div>
                </div>
                <div class="col-xl-8 col-lg-7 col-md-7">
                    <div class="top-seller-carousel slick-row-15 mtn-30">
                        <!-- product item start -->
                        @foreach (var newproduct in Model.NewProducts)
                        {
                            <div class="slide-item">
                                <div class="pro-item-small mt-30">
                                    <div class="product-thumb">
                                        <a href="product-details.html">
                                            <img src="assets/img/product/@newproduct.Url" alt="" />
                                        </a>
                                    </div>
                                    <div class="pro-small-content">
                                        <h6 class="product-name">
                                            <a href="product-details.html">@newproduct.Name</a>
                                        </h6>
                                        <div class="price-box">
                                            <span class="price-regular">$@newproduct.Price</span>
                                            <span class="price-old"><del>$70.00</del></span>
                                        </div>
                                        <div class="ratings">
                                            <span><i class="ion-android-star"></i></span>
                                            <span><i class="ion-android-star"></i></span>
                                            <span><i class="ion-android-star"></i></span>
                                            <span><i class="ion-android-star"></i></span>
                                            <span><i class="ion-android-star"></i></span>
                                        </div>
                                        <div class="product-link-2">
                                            <a href="#" data-toggle="tooltip" title="Wishlist">
                                                <i class="ion-android-favorite-outline"></i>
                                            </a>
                                            <a href="#" data-toggle="tooltip" title="Add To Cart">
                                                <i class="ion-bag"></i>
                                            </a>
                                            <a href="#"
                                               data-toggle="modal"
                                               data-target="#quick_view">
                                                <span data-toggle="tooltip" title="Quick View">
                                                    <i class="ion-ios-eye-outline"></i>
                                                </span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- new products area end -->
    <!-- latest blog area start -->
    <section class="latest-blog-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">@Model.BlogSummary.Title</h2>
                        <p class="sub-title">@Model.BlogSummary.Subtitle</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="blog-carousel-active slick-row-15">
                        @foreach (var blog in Model.Blogs)
                        {
                            <div class="blog-post-item">
                                <div class="blog-thumb">
                                    <a href="blog-details.html">
                                        <img src="assets/img/blog/@blog.Url" alt="blog thumb" />
                                    </a>
                                </div>
                                <div class="blog-content">
                                    <h5 class="blog-title">
                                        <a href="blog-details.html">@blog.Details</a>
                                    </h5>
                                    <ul class="blog-meta">
                                        <li><span>By: </span>Admin,</li>
                                        <li><span>On: </span>14.07.2029</li>
                                    </ul>
                                    <a href="blog-details.html" class="read-more">Read More...</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- latest blog area end -->
    <!-- brand area start -->
    <div class="brand-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="brand-active-carousel">
                        @foreach (var brand in Model.Brands)
                        {
                            <div class="brand-item">
                                <a href="#">
                                    <img src="assets/img/brand/@brand.Url" alt="brand image" />
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- brand area end -->
</main>
<!-- main wrapper end -->
